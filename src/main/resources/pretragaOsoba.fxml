<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.sample.PretragaOsobaController">
   <children>
      <BorderPane prefHeight="400.0" prefWidth="600.0">
         <center>
            <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <bottom>
                  <TableView fx:id="tablicaOsoba" prefHeight="210.0" prefWidth="600.0" BorderPane.alignment="CENTER">
                    <columns>
                      <TableColumn fx:id="stupacIme" prefWidth="70.0" text="Ime" />
                        <TableColumn fx:id="stupacPrezime" prefWidth="75.0" text="Prezime" />
                      <TableColumn fx:id="stupacStarost" minWidth="0.0" prefWidth="50.0" text="Starost" />
                        <TableColumn fx:id="stupacZupanija" prefWidth="100.0" text="Županija" />
                        <TableColumn fx:id="stupacBolest" prefWidth="75.0" text="Bolest" />
                        <TableColumn fx:id="stupacKontakti" prefWidth="230.0" text="Kontaktirane osobe" />
                    </columns>
                  </TableView>
               </bottom>
               <center>
                  <GridPane alignment="CENTER" prefHeight="151.0" prefWidth="600.0" BorderPane.alignment="CENTER">
                    <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <Label text="Ime osobe" GridPane.halignment="RIGHT" GridPane.rowIndex="1">
                           <GridPane.margin>
                              <Insets bottom="20.0" right="20.0" />
                           </GridPane.margin>
                        </Label>
                        <TextField fx:id="imeOsobe" GridPane.columnIndex="1" GridPane.rowIndex="1">
                           <GridPane.margin>
                              <Insets bottom="20.0" right="10.0" />
                           </GridPane.margin>
                        </TextField>
                        <Button defaultButton="true" mnemonicParsing="false" onAction="#search" text="Pretraga" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="3">
                           <GridPane.margin>
                              <Insets top="20.0" />
                           </GridPane.margin></Button>
                        <Label text="Prezime osobe" GridPane.halignment="RIGHT" GridPane.rowIndex="2">
                           <GridPane.margin>
                              <Insets right="20.0" />
                           </GridPane.margin>
                        </Label>
                         <TextField fx:id="imeOsobe" GridPane.columnIndex="1" GridPane.rowIndex="1">
                             <GridPane.margin>
                                 <Insets bottom="20.0" right="10.0" />
                             </GridPane.margin>
                         </TextField>
                        <TextField fx:id="prezimeOsobe" GridPane.columnIndex="1" GridPane.rowIndex="2">
                           <GridPane.margin>
                              <Insets right="10.0" />
                           </GridPane.margin>
                        </TextField>
                     </children>
                  </GridPane>
               </center>
               <top>
                  <Label text="Pretraživanje osoba" BorderPane.alignment="CENTER">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                     <BorderPane.margin>
                        <Insets top="10.0" />
                     </BorderPane.margin>
                  </Label>
               </top>
            </BorderPane>
         </center>
         <top>
             <fx:include fx:id="izbornik" source="izbornik.fxml" />
         </top>
      </BorderPane>
   </children>
